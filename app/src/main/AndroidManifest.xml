<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andrew.chopik.notepadkotlin">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_education"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_education"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EditNoteActivity"
            android:parentActivityName="com.andrew.chopik.notepadkotlin.activity.MainListActivity"
            android:theme="@style/EditNoteTheme">

        </activity>
    </application>

</manifest>